@model IEnumerable<WebsiteQuanLyPhatHanhSach.Models.Book>

@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Sách
        <small>advanced tables</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Manage","BookManage")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Sách</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách Sách</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <p>
                        <a href="@Url.Action("Create","Books")" id="btnAddNewBook" class="btn btn-link" data-toggle="modal" data-target="#myModal">
                            <i class="fa fa-plus"></i> Add New
                        </a>
                    </p>
                    <table id="listbook" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                                <th>@Html.DisplayNameFor(model => model.BookName)</th>
                                <th>@Html.DisplayNameFor(model => model.BookCategory)</th>
                                <th>@Html.DisplayNameFor(model => model.BookAuthor)</th>
                                <th>@Html.DisplayNameFor(model => model.BookPages)</th>
                                <th>@Html.DisplayNameFor(model => model.BookDescribe)</th>
                                <th>@Html.DisplayNameFor(model => model.Publishing.PubName)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BookName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BookCategory)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BookAuthor)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BookPages)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BookDescribe)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Publishing.PubName)</td>
                                    <td>
                                        <a href="@Url.Action("Edit","Books",routeValues: new { id=item.ISBN})" id="btnEditBook" class="btn btn-link" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                        <a href="@Url.Action("Delete","Books",routeValues: new { id=item.ISBN})" id="btnDeleteBook" class="btn btn-link" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-bitbucket"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                                <th>@Html.DisplayNameFor(model => model.BookName)</th>
                                <th>@Html.DisplayNameFor(model => model.BookCategory)</th>
                                <th>@Html.DisplayNameFor(model => model.BookAuthor)</th>
                                <th>@Html.DisplayNameFor(model => model.BookPages)</th>
                                <th>@Html.DisplayNameFor(model => model.BookDescribe)</th>
                                <th>@Html.DisplayNameFor(model => model.Publishing.PubName)</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>             
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<link href="~/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />

@*scripts*@

@section Scripts{
    <script src="~/Content/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#listbook').DataTable();
        }); // document ready

    </script>
}
