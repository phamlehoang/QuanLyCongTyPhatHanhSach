@using WebsiteQuanLyPhatHanhSach.Models
@model IEnumerable<Agency>

@{
    ViewBag.Title = "Agency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Đại lý
        <small>advanced tables</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Manage","BookManage")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Đại lý</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách Đại lý</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="agencies" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyUser)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyAdr)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyPhone)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgencyID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgencyUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgencyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgencyAdr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgencyPhone)
                                    </td>
                                    <td>
                                        <a><i class="fa fa-search-plus"></i></a> @Html.ActionLink("Reports", "Details", "BookSold", new { id = item.AgencyID }, null) | 
                                        <a href="@Url.Action("Details","Agencies",routeValues: new { id=item.AgencyID})" id="btnDetail" class="btn-link" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-info"></i> Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyUser)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyAdr)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgencyPhone)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                    
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<link href="~/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
@*scripts*@

@section Scripts{
    <script src="~/Content/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#agencies').DataTable()

        }); // document ready

    </script>
}